{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://treasure-engine.io/schemas/recon_report.schema.json",
  "title": "Reconciliation Report Schema",
  "description": "Schema for order/fill reconciliation reports (EPOCH-14)",
  "type": "object",
  "properties": {
    "reconciliation_status": {
      "type": "string",
      "enum": ["PASS", "FAIL"],
      "description": "Overall reconciliation status"
    },
    "summary": {
      "type": "object",
      "properties": {
        "orders_checked": {
          "type": "integer",
          "minimum": 0
        },
        "fills_checked": {
          "type": "integer",
          "minimum": 0
        },
        "mismatches_found": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["orders_checked", "fills_checked", "mismatches_found"]
    },
    "mismatches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "enum": [
              "PRICE_MISMATCH",
              "FEE_MISMATCH",
              "QTY_MISMATCH",
              "DUP_FILL",
              "MISSING_FILL",
              "ORDER_STATE_DRIFT",
              "UNEXPECTED_FILL",
              "TIMESTAMP_DRIFT"
            ]
          },
          "order_id": {
            "type": "string"
          },
          "fill_id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer"
          }
        },
        "required": ["code", "message"]
      }
    },
    "mismatch_codes": {
      "type": "object",
      "description": "Count of mismatches by code",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "timestamp": {
      "type": "integer",
      "description": "Report generation timestamp (milliseconds since epoch)"
    }
  },
  "required": [
    "reconciliation_status",
    "summary",
    "mismatches",
    "mismatch_codes",
    "timestamp"
  ]
}
