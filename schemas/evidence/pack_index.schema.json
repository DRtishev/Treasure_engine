{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "treasure-engine/evidence/pack_index.schema.json",
  "title": "Treasure Engine Evidence Pack Index",
  "type": "object",
  "required": [
    "epoch_id",
    "sha",
    "node",
    "npm",
    "date",
    "gate_runs",
    "artifacts",
    "hashes"
  ],
  "properties": {
    "epoch_id": {
      "type": "string",
      "pattern": "^EPOCH-[0-9]{2}$"
    },
    "sha": {
      "type": "string",
      "minLength": 7
    },
    "node": {
      "type": "string",
      "minLength": 1
    },
    "npm": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T.*Z$"
    },
    "gate_runs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256",
          "status"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "status": {
            "type": "string",
            "enum": [
              "PASS",
              "FAIL",
              "UNKNOWN"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        },
        "additionalProperties": false
      }
    },
    "hashes": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^[a-f0-9]{64}$"
      }
    }
  },
  "additionalProperties": false
}
